modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Train PEFT Model"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Inference"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Compare Models"

[[workflows.workflow]]
name = "Train PEFT Model"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/train.py"

[[workflows.workflow]]
name = "Test Inference"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/inference.py"

[[workflows.workflow]]
name = "Compare Models"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 src/compare_models.py"

[deployment]
run = ["sh", "-c", "python src/train.py"]
